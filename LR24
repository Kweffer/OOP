// DataTier/Building.cs
public class Building
{
    public string Type { get; set; }
    public int Rooms { get; set; }
    public double Area { get; set; }
    public double Cost { get; set; }
    public double CostPerSqm => Cost / Area;
}

// LogicTier — агрегация по Type
// Presentation — консольное приложение с #if DEBUG / RELEASE
