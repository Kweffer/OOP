using System;
using System.Windows.Forms;

public partial class Form1 : Form
{
    private TextBox textBoxF;

    public Form1()
    {
        InitializeComponent();
        this.MouseMove += Form1_MouseMove;
        textBoxF = new TextBox { Location = new System.Drawing.Point(10, 10), Width = 100 };
        this.Controls.Add(textBoxF);
    }

    private void Form1_MouseMove(object sender, MouseEventArgs e)
    {
        double h = e.X;
        double v = e.Y;
        if (!double.TryParse(textBoxF.Text, out double f)) f = 0;

        // E = sin(h*12) - ln(11*h) + 6*sin(h*v) + 3*sin(h*f)
        if (h <= 0) 
        { 
            this.Text = "ERROR (h <= 0)"; 
            return; 
        }
        
        try
        {
            double E = Math.Sin(h * 12) - Math.Log(11 * h) + 6 * Math.Sin(h * v) + 3 * Math.Sin(h * f);
            this.Text = $"E = {E:F3}";
        }
        catch (Exception ex)
        {
            this.Text = $"ERROR: {ex.Message}";
        }
    }
}

// Program entry point
public class Program
{
    [STAThread]
    public static void Main()
    {
        Application.EnableVisualStyles();
        Application.SetCompatibleTextRenderingDefault(false);
        Application.Run(new Form1());
    }
}
